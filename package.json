    "validate:export-certificate": "node conformance/validators/schema-validator.js export-certificate examples/json/export-certificate-example.json",
    "validate:lot": "node conformance/validators/schema-validator.js lot examples/json/lot-example.json",
    "validate:lot-transformation": "node conformance/validators/schema-validator.js lot examples/json/lot-transformation-example.json",
    "validate:all": "npm run validate:mine-site && npm run validate:mine-site-multiple && npm run validate:export-certificate && npm run validate:lot && npm run validate:lot-transformation",
